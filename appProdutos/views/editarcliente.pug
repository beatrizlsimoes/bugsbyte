extends layout 

block content
    .w3-card-4 
        .header.w3-container.w3-red
            h2 Editar Cliente
        form.w3-container(method="POST" action=`/clientes/${encodeURIComponent(cliente.id)}/edit`)  
            fieldset
                legend Informações do Cliente
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value=cliente.id readonly)

                label Cartão
                input.w3-input.w3-round(type="text" name="cartão" value=cliente.cartao readonly)

            fieldset
                legend Produtos comprados
                if cliente.Ultimos_produtos && cliente.Ultimos_produtos.length > 0
                  each produto in cliente.Ultimos_produtos
                    label
                        input(type="checkbox" name="Ultimos_produtos" value=produto checked)
                        |  #{produto}
                        br
                else
                  p Nenhum produto encontrado
                label Novo Produto (separados por vírgula)
                input.w3-input.w3-round(type="text" name="Novo Produto" placeholder="Adicionar novos produtos")

            br
            button.w3-btn.w3-red.w3-mb-2(type="submit") Salvar Alterações
            a.w3-btn.w3-red.w3-mb-2.w3-right(href='/clientes') Voltar
            br
            br
            footer.w3-container.w3-red
