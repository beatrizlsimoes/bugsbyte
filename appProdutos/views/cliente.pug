extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
      h1= cliente.id
    .w3-container
      p
        strong Cartão: 
        | #{cliente.cartao}
      p
        strong Ultimos Produtos:
        ul.w3-ul
          each produto in cliente.Ultimos_produtos
            li: a(href=`/produtos/${encodeURIComponent(produto)}`) #{produto}

      // Botões
      a.w3-btn.w3-red(href=`/clientes/${encodeURIComponent(cliente.id)}/edit`) Editar cliente
      a.w3-btn.w3-red.w3-right(href='/clientes') Voltar
      br
      br
      form(action=`/clientes/${encodeURIComponent(cliente.id)}/delete`, method='POST')
        button.w3-btn.w3-red(type='submit') Eliminar cliente
      br
      br

    footer.w3-container.w3-red
      address Generated in hackaton2025