extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
      h1 Lista de Produtos

    .w3-container
      br
      a.w3-btn.w3-red.w3-mb-2.w3-right(href='/') Voltar
      br
      table.w3-table-all
        tr
          th ID
          th Nome
          th Marca
          th Preço (€)
        each produto in produtos || []
          tr
            td= produto.cartao
            td= produto.id
            td= produto.marca
            td= produto.preco.toFixed(2)

    footer.w3-container.w3-red
      address Generated in hackton2025
